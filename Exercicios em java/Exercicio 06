// Questão 06: Fazer um programa para ler o código de uma peça 1, o número de peças 1, o valor unitário de cada peça 1, o
//código de uma peça 2, o número de peças 2 e o valor unitário de cada peça 2. Calcule e mostre o valor a ser pago.

package javiando;
import java.util.Scanner;
import java.util.Locale;

public class javajan {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
	Scanner input = new Scanner(System.in);
	 System.out.println("Digite o codigo da peça 1!");
		 int codone = input.nextInt();
	 System.out.println("Digite o numero de peças 1");
		 int numone = input.nextInt();
	 System.out.println("Digite o valor da peça 1");
		 double valuone = input.nextDouble();
		 
	 System.out.println("Digite o codigo da peça 2!");
	 	int codtwo = input.nextInt();
	 System.out.println("Digite o numero de peças 2");
	 	int numtwo = input.nextInt();
	 System.out.println("Digite o valor da peça 2");
	 	double valutwo = input.nextDouble();
	 	
		
	 double valor = valuone*numone+valutwo*numtwo;
		
		
	System.out.printf("O valor a pagar é" + String.format("%.2f" , valor));
	
	input.close();

	}
}
