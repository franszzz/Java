// Questão 08: Escrever um algoritmo que leia a idade de uma pessoa 
//em dias (total de dia que ele já viveu) e informe sua idade em anos, meses e dias.
package javiando;
import java.util.Scanner;


public class javajan {

	public static void main(String[] args) {
	
	Scanner input = new Scanner(System.in);
	 System.out.println("Quantos dias de vida voce tem?");
		 int dias = input.nextInt();
	 
	 int anos = dias/365;
	 int meses = dias/30;
	

		
	System.out.printf("Voce tem "+ anos + " anos de vida " + meses + " meses " + dias + " e dias de vida");
	
	input.close();

	}
}
